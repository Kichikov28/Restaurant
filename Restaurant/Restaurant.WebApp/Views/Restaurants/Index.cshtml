@model Restaurant.ViewModel.Restaurants.RestaurantsIndexViewModel

<h1>Restaurants page</h1>


<table class="table table-bordered table-hover">
    <thead class="thead-light">
        <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Location</th>
            <th>Rating</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model.Restaurants)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.Type</td>
                <td>@p.Location</td>
                <td>@p.Rating</td>
                <td><img src="@p.ImageUrl" width="300px" height="150px" /></td>
            </tr>
        }
    </tbody>
    <tfoot>
    </tfoot>
</table>
<partial name="_PagingPartial"/>
